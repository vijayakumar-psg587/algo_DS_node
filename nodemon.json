{
    "watch": ["src/**"],
    "exec": "ts-node -r dotenv/config -r tsconfig-paths/register src/main.ts -r dotenv_config_path=./config/development/.env",
    "restartable": "rs",
    "verbose": false,
    "ignore": ["src/**/*.spec.ts", "/node_modules/**", "test/**"],
    "nodeArgs": [{
        "NODE_ENV": "development"
    }], 
    "ext": "js,ts, jade, tsx, jsx, mjs"
}